#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>

void print(char *str)
{
    printf("%s\n", str);
}

char ft_capitalizer(char *str, int i)
{    
    int temp;

        temp = str[i] - 97;
        str[i] = 65 + temp;
        return str[i];
}

char *ft_strcapitalize(char *str)
{
    int i;
    int fakebool;
    
    fakebool = 1;
    i = 0;
          while(str[i] != '\0')
          {
            if((str[i] >= 65 && str[i] <= 90) || (str[i] >= 97 && str[i] <= 122) || (str[i] >= 48 && str[i] <= 57) )
            {
                if ((str[i] >= 97 && str[i] <= 122) || (str[i] >= 48 && str[i] <= 57))
                {
                  if (fakebool == 1 && (str[i] >= 97 && str[i] <= 122))
                  {
                      str[i] = ft_capitalizer(str,i);
                  }
                  fakebool = 0;
                }
            }
              else
                  fakebool = 1;
              i++;
          }
          return (str);
}


int main() 
{   
    char str[100] = ("salut, comment tu vas ? 42mots quarante-deux; cinquante+et+un");
    printf("%s\n", str);
    ft_strcapitalize(str);
    printf("%s\n", str);
    return 0;
}
